#!/bin/bash

if $(tmux has-session -t main); then
    create_window='new-window ; '
else
    create_window=''
fi
tmux new-session -t main \; ${create_window} attach \; set-option destroy-unattached on \; set-hook client-detached kill-window \; set-hook session-created 'run-shell ~/bin/tmux-bg-status.sh' \; set-hook session-window-changed 'run-shell ~/bin/tmux-bg-status.sh' \; set-hook session-closed 'run-shell ~/bin/tmux-bg-status.sh'
